server {
	# ld: LISTEN_LINE
	server_name SERV_NAME;
	listen LISTEN_PORTS;

	location / {
		if ($scheme != "ws" ) {
			proxy_pass $scheme://BACKEND;
		}

		proxy_pass http://BACKEND;

		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";
		proxy_set_header Host $host;
	}
}


